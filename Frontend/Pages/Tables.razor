@page "/tables"
@inject HttpClient Http

<h3>Database Tables</h3>

@if (tables == null)
{
    <p>Loading...</p>
}
else if (tables.Count == 0)
{
    <p>No tables available.</p>
}
else
{
    <table class="bg-white border-gray-300 min-w-full border">
        <thead>
        <tr>
            <th class="py-2 px-4 border-b">ID</th>
            <th class="py-2 px-4 border-b">Name</th>
            <th class="py-2 px-4 border-b">Created At</th>
            <th class="py-2 px-4 border-b">Created By</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var table in tables)
        {
            <tr>
                <td class="py-2 px-4 border-b">@table.Id</td>
                <td class="py-2 px-4 border-b">@table.Name</td>
                <td class="py-2 px-4 border-b">@table.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td class="py-2 px-4 border-b">@table.CreatedBy</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<MetaTableDto> tables;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            tables = await Http.GetFromJsonAsync<List<MetaTableDto>>("https://localhost:5002/api/DynamicTable");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching tables: {ex.Message}");
            // Optionally, display an error message to the user
        }
    }


    public class MetaTableDto
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public DateTime CreatedAt { get; set; }
        public string CreatedBy { get; set; }
    }
}